<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netcoreapp3.1;net5.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>AmirHosseinKhademi</Authors>
    <Company>ViraNasirFanavar</Company>
    <PackageTags>.net , c# , xamarin , asp , extensions, .netcore, .netstandard</PackageTags>
    <PackageProjectUrl>https://github.com/Netina/Netina.Core</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Netina/Netina.Core</RepositoryUrl>
    <PackageIcon>NetinaLogo.jpg</PackageIcon>
    <Description>Package for all .net project that contain extensions , basic models , converters and many tools that we use in our projects</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\NetinaLogo.jpg">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

</Project>
